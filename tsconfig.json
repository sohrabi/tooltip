{
    "compilerOptions": {
      "target": "ES5",
      "module": "ES2015",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "removeComments": false,
      "noImplicitAny": false,
      "outDir": "./dist",
      "allowJs": true,
      "listFiles": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }